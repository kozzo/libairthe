{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}



	<div class="container d-flex flex-column justify-content-center align-items-center design-dark-blue width-100 height-100">

		<h3 class="m-4 text-white">Inscription</h3>

		{{ form_errors(registrationForm) }}

		<div class="card d-flex flex-column justify-content-center align-items-center shadow-lg p-4 ">
			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.firstName) }}
			{{ form_row(registrationForm.lastName) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {
				label: 'Mot de passe'
			}) }}
			<div class="d-flex justify-content-center align-items-center">
				{{ form_row(registrationForm.agreeTerms) }}
			</div>

			<div class="width-100 d-flex flex-column justify-content-center align-items-center">
				<button type="submit" class="btn btn-primary design-blue">Inscription</button>
			</div>
			{{ form_end(registrationForm) }}
		</div>

	</div>

{% endblock %}
