{% extends 'base.html.twig' %}

{% block title %}Laisser un avis{% endblock %}

	{% block content %}
		<div class="container">
			<h1>Laisser un avis pour votre séjour</h1>

			<p>Vous évaluez le séjour : </p>
			<p>Date de départ : {{ reservation.departureDate|date('d/m/Y') }}</p>

			{{ form_start(form) }}
			<div class="mb-3">
				{{ form_label(form.note) }}
				{{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.note) }}
			</div>

			<div class="mb-3">
				{{ form_label(form.content) }}
				{{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
				{{ form_errors(form.content) }}
			</div>

			<button type="submit" class="btn btn-success">Soumettre mon avis</button>
			{{ form_end(form) }}

			<div class="mt-3">
				<a class="btn btn-success" href="{{ path('app_reservation_summary', {'slug': reservation.slug}) }}">Retour la réservation</a>
			</div>
		</div>
	{% endblock %}


